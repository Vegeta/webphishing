<div class="row" id="app">
	<div class="col-sm-12">

		<div class="card">
			<div class="card-body">
				<h5 class="card-title">Filtros</h5>

				<form id="formFiltros" method="post">
					<div class="row">
						<div class="col-sm-4">
							<div class="row mb-3">
								<label class="col-sm-2 col-form-label col-form-label-sm">Email</label>
								<div class="col-sm-10">
									<input type="text" class="form-control form-control-sm" name="email" v-model="filtros.email">
								</div>

							</div>
						</div>
						<div class="col-sm-4">
							<div class="row mb-3">
								<label class="col-sm-2 col-form-label col-form-label-sm">Nombres</label>
								<div class="col-sm-10">
									<input type="text" class="form-control form-control-sm" name="nombre" v-model="filtros.nombres">
								</div>
							</div>
						</div>
						<div class="col-sm-4">
							<div class="row mb-3">
								<label class="col-sm-2 col-form-label col-form-label-sm">Apellidos</label>
								<div class="col-sm-10">
									<input type="text" class="form-control form-control-sm" name="nombre" v-model="filtros.apellidos">
								</div>
							</div>
						</div>
					</div>


					<div>
						<button type="submit" class="btn btn-primary btn-sm">
							<i class="bi bi-search"></i>
							Filtrar
						</button>
					</div>
				</form>
			</div>


			<div class="card">
				<div class="card-body">

					<div class="mt-3">
						<table class="display minitabla" id="tlista" style="width:100%">
							<thead>
								<tr>
									<th>Fecha Examen</th>
									<th>Nombre completo</th>
									<th>Email</th>
									<th>% Exito</th>
									<th>Score</th>
									<th>Tiempo total(s)</th>
									<th>Prom. tiempo(s)</th>
								</tr>
							</thead>
							<tbody>
							</tbody>
						</table>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>


@section Scripts {
	@await Html.PartialAsync("_Datatables")
	@await Html.PartialAsync("_Validation")

	<script>
		Vue.createApp({
			data() {
				return {
					baseUrl:'@ViewBag.self',
					filtros:{
						email:null,
						apellidos:null,
						nombres:null,
					},
					lista:[]
				}
			},
			methods: {
				filtrar() {
					$('#tlista').DataTable().ajax.reload();
				}
			},
			mounted() {
				var self = this;
				var tabla = $('#tlista').DataTable({
					language: {
						url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/es-AR.json',
					},
					columns: [
						{
							data: 'fechaExamen',
							render: function (data, type, row) {
								let url = self.baseUrl + '/detalle/' + row.id;
								return `<a href="${url}">${row.fechaExamen}</a>`
							}
						},
						//{ data: 'activo', orderable: false },
						{ data: 'nombreCompleto' },
						{ data: 'email' },
						{ data: 'exito' },
						{ data: 'score' },
						{ data: 'tiempo' },
						{ data: 'avgTiempo' },
					],
					order: [[0, 'desc']],
					searching: false,

					processing: true,
                    serverSide: true,

					ajax: {
						url: self.baseUrl +'/lista',
						type: 'POST',
                        async: true,
						data: function (d) {
							if (d.start == 0) {
								d.page = 1
							} else {
								d.page = (d.start / d.length) + 1
							}
							d.jsonFiltros = JSON.stringify(self.filtros);

							if (d.order.length > 0) {
								d.order.forEach(e => {
									e.campo = d.columns[e.column].data
								});
							}

							console.log(d);
						},
					},
				});

				$('#formFiltros').validate({
					submitHandler() {
						self.filtrar()
						return false
					}
				})

			}
		}).mount('#app')

	</script>
}