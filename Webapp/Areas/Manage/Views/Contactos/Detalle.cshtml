@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<section id="app">
	<div class="row">
		<div class="col-sm-4">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">Detalle Mensaje</h5>

					<table class="table minitabla">
						<tr>
							<th>Titulo</th>
							<td class="fw-bold">{{ model.titulo }}</td>
						</tr>
						<tr>
							<th class="col-sm-3">Fecha</th>
							<td>{{ fechaHora(model.fecha) }}</td>
						</tr>
						<tr>
							<th>Nombre</th>
							<td>{{ model.nombre }}</td>
						</tr>
						<tr>
							<th>Email</th>
							<td>{{ model.email }}</td>
						</tr>
						<tr>
							<th>Ip Address</th>
							<td>{{ model.ipAddress }}</td>
						</tr>
					</table>

				</div>
			</div>
		</div>

		<div class="col-sm-8">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">Mensaje</h5>

					<div class="" v-text="model.mensaje">
					</div>

				</div>
			</div>
		</div>
	</div>

</section>

@section Scripts {

	@await Html.PartialAsync("_Validation")

	<script>

		Vue.createApp({
			data() {
				return {
					model: @Html.Raw(ViewBag.modelo),
					baseurl: '@ViewBag.self',
				}
			},
			methods: {
			},
			mounted() {
			}
		})
		.use(globalDirectives)
		.mount('#app')

	</script>
}